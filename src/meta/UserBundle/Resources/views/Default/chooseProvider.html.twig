{% extends 'metaUserBundle::layout.html.twig' %}

{% block title %}{{ parent() }} > {{ "user.createForm.title"|trans }}{% endblock %}

{% block javascripts %}
  {{ parent() }}
    {% javascripts '@metaGeneralBundle/Resources/public/js/select2.behaviour.js' 
            filter='?yui_js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block header %}
  <div class="headerAvatarAndActions">
    <div class="textAvatar"><i class="fa fa-magic"></i></div>
  </div>
  <div class="objectHeader">
    <h2>{{ "user.createForm.title"|trans }}</h2>
    <h4>{{ "user.createForm.help"|trans }}</h4>
    <p>{{ "user.createForm.text"|trans }}</p>
  </div>
{% endblock %}


{% block content %}
<section>
  <div class="sectionContent">{{ "user.createForm.chooseProvider"|trans }}</div>
</section>
<section>
  <div class="sectionTitle"></div>
  <div class="sectionContent">
    <a href="{{ path('fp_openid_security_check', { 'inviteToken': inviteToken, 'openid_identifier': "https://www.google.com/accounts/o8/id" }) }}" class="btn btn-primary"><i class="fa fa-google-plus"></i> Google</a> - <a href="{{ path('fp_openid_security_check', { 'inviteToken': inviteToken, 'openid_identifier': "https://openid.stackexchange.com/" }) }}" class="btn btn-primary"><i class="fa fa-stack-exchange"></i> StackExchange</a>
  </div>
</section>
<section>
  <div class="sectionContent">
    {{ "user.createForm.orSignup"|trans({'%link%': '<a href="' ~ path('u_signup',{ 'inviteToken': inviteToken}) ~ '" />' ~ "user.createForm.here"|trans ~ '</a>' })|raw }}
  </div>
</section>
{% endblock %}