{% extends 'metaIdeaProfileBundle::layout.html.twig' %}

{% block title %}{{ parent() }} > All Ideas{% endblock %}

{% block header %}
  <div class="headerAvatarAndActions">
    <div class="textAvatar"><i class="icon-paper-clip"></i></div>
  </div>
  <div class="objectHeader">
    <h2>Ideas</h2>
    <h4>All the ideas accessible on meta are listed here.</h4>
    <p><a href="{{ path('i_new_idea') }}" class="btn btn-success">New idea</a></p>
  </div>
{% endblock %}

{% block content %}
{% if ideas %}
{% for idea in ideas %}
<section class="listing">

  <a href="{{ path('i_show_idea', {'id': idea.id}) }}">
    <img src="{{ idea.picture }}" width="100" height="100"/>
  </a>

  <div class="listingItemInfo">
    <h4><a href="{{ path('i_show_idea', {'id': idea.id}) }}">{{ idea.name }}</a></h4>
    <div>{{ idea.headline }}</div>
    <div class="muted"><i class="icon-calendar"></i> Created on {{ idea.createdAt|date("d/m/Y") }}</div>
  </div>

  <div class="listingItemRelatedObjects">
    
    <div class="type">
      <div class="muted pull-right">{{ idea.watchers|length }} 
        user{% if (idea.watchers|length) > 1 %}s{% endif %} watching</div>
    </div>

    <ul>
      {% for watcher in idea.watchers %}
      <li>
        <a href="{{ path('u_show_user_profile', {'username': watcher.username}) }}">
          <img src="{{ watcher.avatar }}" title="{{ watcher.firstName }} {{ watcher.lastName|upper }}" width="30" height="30" class="miniAvatar"/>
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>

</section>
{% endfor %}

{% endif %}

{% endblock %}