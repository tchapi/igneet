{% extends 'metaUserBundle::layout.html.twig' %}

{% block title %}{{ parent() }} > {{ user.getFullName() }}{% endblock %}

{% set shortcode %}[[user:{{ user.username }}]]{% endset %}

{% block javascripts %}
  {{ parent() }}
  {% if isMe %}
    {% javascripts '@metaGeneralBundle/Resources/public/js-edit/editable.behaviour.js'
            filter='?yui_js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
  {% endif %}
{% endblock %}

{% block header %}

  <div class="avatar">

    <img src="{{ asset(user.getAvatar()) }}" />
    {% if isMe %}
      <a href="{{ path('u_edit_user_profile_reset_avatar', {'username': user.username, 'token': csrf_token('resetAvatar') }) }}" title="{{ "picture.resetHelp"|trans }}"><i class="fa fa-trash-o fa-2x"></i></a>
      <a href="{{ path('g_choose_file', {'targetAsBase64': targetAvatarAsBase64, 'token': csrf_token('edit') }) }}" title="{{ "picture.changeHelp"|trans }}"><i class="fa fa-pencil fa-2x"></i></a>
    {% endif %}

  </div>

  <div class="info">

    <h2>
      <span{% if isMe %} data-url="{{ path('u_edit_user_profile', {'username': user.username, 'token': csrf_token('edit') }) }}" data-name="first_name" data-last="{{ user.firstName }}" contenteditable="true"{% endif %}>{{ user.firstName }}</span> <span{% if isMe %} data-url="{{ path('u_edit_user_profile', {'username': user.username, 'token': csrf_token('edit') }) }}" data-name="last_name" data-last="{{ user.lastName }}" contenteditable="true"{% endif %}>{{ user.lastName }}</span>
    </h2>

    <h3>
      <span{% if isMe %} data-url="{{ path('u_edit_user_profile', {'username': user.username, 'token': csrf_token('edit') }) }}" data-name="headline" placeholder="{{ "user.headline.emptyText"|trans }}" data-type="text" data-last="{{ user.headline }}" contenteditable="true"{% endif %} title="{{ user.headline }}">{{ user.headline }}</span>
    </h3>

    <div class="skills">
      {% if user.skills|length > 0 or isMe %}
        {% spaceless %}
        <ul{% if isMe %} data-url="{{ path('u_edit_user_profile', {'username': user.username, 'token': csrf_token('edit') }) }}" data-emptytext="{{ "user.skills.emptyText"|trans }}" data-name="skills"{% endif %}>
        {% for skill in user.skills %}
          <li style="border: 1px solid #{{ skill.color }}" rel="{{ skill.slug }}">
          {% if isMe %}
            <a href=""><i class="fa fa-times"></i></a>  
          {% endif %}
          {{ (skill.slug ~ ".name")|trans({}, 'skills') }}</li>
        {% endfor %}
          {% if isMe %}
          <li><a href=""><i class="fa fa-plus"></i></a></li>
          {% endif %}
        </ul>
        {% endspaceless %}
      {% else %}
        {{ "user.skills.none"|trans }}
      {% endif %}
    </div>

    <h4>
      <div>
        <i class="fa fa-map-marker"></i> <span{% if isMe %} data-url="{{ path('u_edit_user_profile', {'username': user.username, 'token': csrf_token('edit') }) }}" data-name="city" data-title="{{ "user.city.help"|trans }}" data-last="{{ user.city }}" placeholder="{{ "user.city.emptyText"|trans }}" contenteditable="true"{% endif %}>{{ user.city }}</span>
      </div>

      <div>
        <i class="fa fa-calendar"></i> {{ "user.list.member.since"|trans({ '%date%': user.createdAt|date("date.format"|trans)}) }}
      </div>
    </h4>

    <div>
    {% if alreadyFollowing %}
        <i class="fa fa-rss"></i> {{ "user.following"|trans({'%user%': user.firstName}) }} <a href="{{ path('u_unfollow_user', {'username': user.username, 'token': csrf_token('unfollowUser') }) }}">{{ "user.unfollow"|trans }}</a>
    {% elseif not isMe %}
        <i class="fa fa-rss"></i> {{ "user.not.following"|trans({'%user%': user.firstName}) }} <a href="{{ path('u_follow_user', {'username': user.username, 'token': csrf_token('followUser') }) }}">{{ "user.follow"|trans }}</a>
    {% endif %}
    </div>

  </div>

{% endblock %}

{% block content %}
<section>
  <div class="wmd-heading"><i class="fa fa-bullhorn"></i> {{ "user.about"|trans({ '%user%': user.getFullName}) }}{% if isMe %}<a class="pull-right markdown-trigger">&hellip;<i class="fa fa-pencil"></i></a>{% endif %}</div>
  <div>

    {% if isMe %}
      <div class="wmd-message-top alert alert-warning" style="display: none;"><i class="fa fa-warning"></i> {{ "unsaved.changes"|trans }}</div>
      <div class="wmd-wrapper well well-small" style="display: none;">
        <div class="wmd-panel">
            <div id="wmd-button-bar"></div>
            <textarea unsaved='no' data-name="about" data-url="{{ path('u_edit_user_profile', {'username': user.username, 'token': csrf_token('edit') }) }}" class="wmd-input" id="wmd-input">{{ user.about }}</textarea>
        </div>
        <div>
          <button id="wmd-save" class="btn btn-primary">{{ "save"|trans }}</button> <span class="muted wmd-message">{{ "saveHelp"|trans }}</span>
        </div>
        <div id="wmd-preview" class="preview">{{ user.about }}</div>
      </div>
    {% endif %}

    <div class="content">{{ user.about|deeplinks|markdown }}</div>

  </div>
</section>

{% if following|length > 0 %}
<section class="colored first">
<div class="sectionTitle">{{ "user.followings"|trans({'%user%': user.firstName }) }} : </div>
<ul class="users sectionContent">
{% for followingUser in following %}
  <li>
    <a href="{{ path('u_show_user_profile', {'username': followingUser.username}) }}">
      <img src="{{ followingUser.avatar }}" width="70" height="70" class="smallAvatar"/>
      <div class="smallObjectInfos ellipsis-multiline">
        <span><div>{{ followingUser.firstName }}</div><div>{{ followingUser.lastName }}</div></span>
      </div>
    </a>
  </li>
{% endfor %}
</ul>
</section>
{% endif %}

