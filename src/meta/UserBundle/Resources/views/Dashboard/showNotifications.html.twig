{% extends 'metaUserBundle::layout.html.twig' %}

{% block title %}{{ parent() }} > {{ user.getFullName() }} | Notifications{% endblock %}

{% block header %}
  <div class="headerAvatarAndActions">
    <img src="{{ asset(user.getAvatar()) }}" width="150" height="150" class="avatar"/>
  </div>
  <div class="userInfo">
    <h2 class="ellipsis">
      <span>My notifications</span>
    </h2>
  </div>
{% endblock %}

{% block content %}
{% if notifications|length > 0 %}
  <section>
    <ul class="timeline">
      {% for notification in notifications %}
      <li class="logWrapper full"><div class="log">{{ notification['data']|raw }}</div></li>
      {% endfor %}
    </ul>
  </section>
{% else %}
  <section class="centered">
    <i class="muted icon-ok icon-4x"></i>
    <br />You have no notifications !
  </section>
{% endif %}
{% endblock %}