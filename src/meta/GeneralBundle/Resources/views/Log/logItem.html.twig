{% if locale is not defined %}{% set locale = app.user.getPreferredLanguage() %}{% endif %}
<span class="icon-{{ icon }} icon-large"></span> — 
<span class="label fullDate">{{ date|date("date.format"|trans({}, 'messages', locale)) }}</span> <span class="label label-info">{{ date|date("time.format"|trans({}, 'messages', locale)) }}</span>
<span class="avatar">
  {% if not user.isDeleted %}
  <img src="{% if user.isAvatarGravatar %}{{ user.avatar }}{% else %}{{ base_path ~ user.avatar }}{% endif %}" width="18" height="18" class="avatar"/>
  {% else %}
  <img src="{{ base_path ~ "/bundles/metageneral/img/defaults/user.png" }}" width="18" height="18" class="avatar"/>
  {% endif %}
</span> — 
<span>{{ text|raw }}</span>
{% if combinedCount > 1 %}
<span>({{ combinedCount }})</span>
{% endif %}