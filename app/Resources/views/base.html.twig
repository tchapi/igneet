<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}igneet{% endblock %}</title>

{% block stylesheets %}

{% stylesheets  'bundles/metageneral/css/bootstrap.css' 
                'bundles/metageneral/css/font-awesome.css' 
                'bundles/metageneral/css/select2.css' 
                'bundles/metageneral/css/style.css' 
  filter='?yui_css,cssrewrite' output='css/min/base.css' %}
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
{% endstylesheets %}

{% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        <header>
          <div class="navbar navbar-fixed-top navbar-inverse">
            <div class="navbar-inner">
              <a class="brand" href="#"><i class='icon-fire'></i> igneet</a>
              {% render "metaUserBundle:Security:currentUserMenu" %}
            </div>
          </div>
        </header>
        <div id="flashes">
        {% if app.session.hasFlash('success') %}
          <div class="alert alert-success">
              {{ app.session.flash('success') }}
              <button type="button" class="close" data-dismiss="alert">×</button>
          </div>
        {% endif %}
        {% if app.session.hasFlash('warning') %}
          <div class="alert alert-warning">
              {{ app.session.flash('warning') }}
              <button type="button" class="close" data-dismiss="alert">×</button>
          </div>
        {% endif %}
        {% if app.session.hasFlash('error') %}
          <div class="alert alert-error">
              {{ app.session.flash('error') }}
              <button type="button" class="close" data-dismiss="alert">×</button>
          </div>
        {% endif %}
        {% if app.session.hasFlash('info') %}
          <div class="alert alert-info">
              {{ app.session.flash('info') }}
              <button type="button" class="close" data-dismiss="alert">×</button>
          </div>
        {% endif %}
        </div>
        <div id="workspace">
          <div class="cardContainer">
            <div class="card">
{% block body %}{% endblock %}
            </div>
          </div>
        </div>

{% block javascripts %}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
{% javascripts '@metaGeneralBundle/Resources/public/js/bootstrap.js'
               '@metaGeneralBundle/Resources/public/js/select2.js'
               '@metaGeneralBundle/Resources/public/js/general.behaviour.js' filter='?yui_js' %}
        <script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% if ga_tracker_id != 0 %}
        <script type="text/javascript">

          var _gaq = _gaq || [];
          _gaq.push(['_setAccount', '{{ ga_tracker_id }}']);
          _gaq.push(['_trackPageview']);

          (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
          })();

        </script>
{% endif %}
{% endblock %}

        <footer>
        copyright <a href="https://about.me/tchap">tchap</a> 2012-2013 | terms of use | contact | <a href="http://mantis.tchap.me" target="_blank">report a bug</a>
        </footer>

    </body>
</html>
