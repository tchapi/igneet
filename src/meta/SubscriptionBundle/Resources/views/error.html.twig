{% extends 'metaSubscriptionBundle::layout.html.twig' %}

{% block title %}{{ parent() }} > {{ "billing.error.title"|trans }}{% endblock %}

{% block header %}
<div class="title">
  <h2>{{ "billing.error.title"|trans }}</h2>
  <h3>{{ "billing.error.help"|trans}}</h3>
</div>
{% endblock %}

{% block content %}

  <section>
    <p>{{ "billing.error.text"|trans }}</p>
  </section>

  <section class="billing-help">
    <em>
      <i class="fa fa-question-circle"></i> {{ "billing.problems"|trans({ "%mail%": mailer_contact})|raw }}
    </em>
  </section>

{% endblock %}
