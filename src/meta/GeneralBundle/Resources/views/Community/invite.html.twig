{% extends 'metaGeneralBundle:Community:layout.html.twig' %}

{% block title %}{{ parent() }} > {{ "user.invitation.title"|trans }}{% endblock %}

{% block header %}
  <div class="title">
    <h2>{{ "user.invitation.title"|trans }}</h2>
    <h3>{{ "user.invitation.community"|trans({ '%community%': community.name}) }}</h3>
    <h4>{{ "user.invitation.text"|trans({ '%community%': community.name}) }}</h4>
  </div>
{% endblock %}

{% block content %}
<form action="{{ path('g_invite', {'token': csrf_token('invite'), 'confirm': true}) }}" method="post">
  <section>
    <div class="label"><label for="mailOrUsername" class="required">{{ "user.invitation.field"|trans }} : </label></div>
    <div class="content"><input type="text" id="mailOrUsername" name="mailOrUsername" required="required"></div>
  </section>
  <section>
    <div class="content">
      <input type="submit" value="{{ "user.invitation.button"|trans }}" class="button" /></div>
  </section>
</form>
{% endblock %}
