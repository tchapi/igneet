{% extends 'metaUserBundle::layout.html.twig' %}

{% block title %}{{ parent() }} > {{ "user.passwordChange.title"|trans }}{% endblock %}

{% block header %}
  <div class="headerAvatarAndActions">
    <div class="textAvatar"><i class="icon-lock"></i></div>
  </div>
  <div class="objectHeader">
    <h2>{{ "user.passwordChange.title"|trans }}</h2>
    <h4>{{ "user.passwordChange.help"|trans }}</h4>
  </div>
{% endblock %}

{% block content %}
<form action="{{ path('change_password', { 'passwordToken' : passwordToken }) }}" method="POST">
  <section>
    <div class="sectionTitle"><label for="password">{{ "user.passwordChange.new"|trans }} :</label></div>
    <div class="sectionContent">
      <input type="password" id="password" name="password" value=""/>
    </div>
  </section>
  <section>
    <div class="sectionTitle"><label for="password_2">{{ "user.passwordChange.confirm"|trans }} :</label></div>
    <div class="sectionContent">
      <input type="password" id="password_2" name="password_2" value=""/>
    </div>
  </section>
  <section>
    <div class="sectionTitle"></div>
    <div class="sectionContent">
      <input type="submit" name="{% if flavour == 'reactivate' %}{{ "user.reactivation.button"|trans }}{% else %}{{ "user.passwordChange.button"|trans }}{% endif %}" class="btn btn-info"/>
    </div>
  </section>
</form>
{% endblock %}