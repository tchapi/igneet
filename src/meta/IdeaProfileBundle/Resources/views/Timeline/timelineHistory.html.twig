<div class="timeline_filters">
  <select id="timeline_filters" class="select2-trigger" multiple="multiple">
    {% for group, name in filter_groups %}
    <option value={{ group }}>{{ name }}</option>
    {% endfor %}
  </select>
  <button class="btn" id="timeline_reset">Reset filters</button>
</div>
<ul class="timeline">
{% for step in timeframe %}
  {% if step.data|length > 0 %}
  <li class="dateWrapper date"><div class="date-wrapper"><div class="date">{{ step.name}}</div></div></li>

  {% for item in step.data %}
    <li class="logWrapper" {{ item.groups|join(' ') }}><div class="log">{{ item.text|raw }}</div></li>
  {% endfor %}

  {% else %}
  <li class="dateWrapper pass"></li>
  {% endif %}
{% endfor %}
</ul>