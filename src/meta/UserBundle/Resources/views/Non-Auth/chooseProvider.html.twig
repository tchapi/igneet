{% extends '::base-no-menu.html.twig' %}

{% block title %}{{ parent() }} > {{ "user.createForm.title"|trans }}{% endblock %}

{% block container %}

  <header class="non-auth">
    <h1><img src="{{ asset('/bundles/metageneral/img/logo/logo-128.png') }}" /><span>Igneet</span></h1>
    <span>{{ app.request.host }}</span>
  </header>

  <div class="non-auth">
    <h2>{{ "user.createForm.title"|trans }}</h2>
    <h3><a href="{{ path("login") }}">&laquo; {{ "back"|trans }}</a></h3>
    <h3>{{ "user.createForm.help"|trans }}</h3>
    <h4>{{ "user.createForm.text"|trans }}</h4>
  </div>

  <section class="non-auth">
    <div class="content">
      <a href="{{ path('fp_openid_security_check', { 'inviteToken': inviteToken, 'openid_identifier': "https://www.google.com/accounts/o8/id" }) }}" class="button"><i class="fa fa-google-plus"></i> Google</a>
      <a href="{{ path('fp_openid_security_check', { 'inviteToken': inviteToken, 'openid_identifier': "https://openid.stackexchange.com/" }) }}" class="button"><i class="fa fa-stack-exchange"></i> StackExchange</a>
      <a href="{{ path('u_signup',{ 'inviteToken': inviteToken}) }}" class="button"><i class="fa fa-envelope"></i> {{ "user.createForm.orSignup"|trans }}</a> 
    </div>
  </section>

{% endblock %}