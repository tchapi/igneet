{% extends 'metaGeneralBundle:Community:layout.html.twig' %}

{% block title %}{{ parent() }} > {{ app.user.currentCommunity.name }} | {{ "community.home.title"|trans }}{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {% if isManager %}
    {% javascripts '@metaGeneralBundle/Resources/public/js-edit/editable.behaviour.js' 
            filter='?yui_js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% endif %}
{% endblock %}

{% block header %}

  <div class="avatar">

    <img src="{{ asset(app.user.currentCommunity.getPicture()) }}" />
    {% if isManager %}
      <a href="{{ path('g_edit_community_reset_picture', {'uid': app.user.currentCommunity.id|to_uid, 'token': csrf_token('resetPicture')  }) }}" title="{{ "picture.resetHelp"|trans }}"><i class="fa fa-trash-o fa-2x"></i></a>
      <a href="{{ path('g_choose_file', {'targetAsBase64': targetPictureAsBase64, 'token': csrf_token('edit') }) }}" title="{{ "picture.changeHelp"|trans }}"><i class="fa fa-pencil fa-2x"></i></a>
    {% endif %}

  </div>

  <div class="info">

    <h2>
      <span{% if isManager %} data-url="{{ path('g_edit_community', {'token': csrf_token('edit') }) }}" data-name="name" data-last="{{ app.user.currentCommunity.name }}" contenteditable="true" rich="false"{% endif %}>{{ app.user.currentCommunity.name }}</span>
    </h2>

    <h3>
      <span{% if isManager %} data-url="{{ path('g_edit_community', {'token': csrf_token('edit') }) }}" data-name="headline" placeholder="{{ "community.createForm.headlinePlaceholder"|trans }}" data-type="text" data-last="{{ app.user.currentCommunity.headline }}" contenteditable="true" rich="false"{% endif %} title="{{ app.user.currentCommunity.headline }}">{{ app.user.currentCommunity.headline }}</span>
    </h3>

    <p>{{ app.user.currentCommunity.about }}</p>

  </div>


  {% if isManager %}
  <div class="communityActions">
    <p><a href="{{ path('g_invite') }}" class="btn btn-success"><i class="fa fa-user"></i> {{ "community.invite.short"|trans }}</a></p>
    <p><a href="{{ path('g_manage_community') }}" class="btn btn-primary"><i class="fa fa-cogs"></i> {{ "community.manage.short"|trans }}</a></p>
  </div>
  {% endif %}

{% endblock %}

{% block content %}

  {% if not isGuest %}
  <section>
    <div class="heading"><i class="fa fa-home"></i> {{ "community.home.recently.community"|trans }}</div>
    <div class="row">

      <span class="col-md-4">
        <h4>{{ "community.home.last.ideas"|trans }}</h4>
        {% if lastIdeas|length > 0 %}
          <ul>
          {% for idea in lastIdeas %}
            <li><a href="{{ path('i_show_idea', { uid: idea.id|to_uid} ) }}">{{ idea.name }}</a> - <em>{{ "community.home.created.on"|trans({ '%date%': idea.createdAt|date("date.fullFormat"|trans) }) }}</em></li>
          {% endfor %}
          </ul>
        {% else %}
          <em class="muted">{{ "community.home.no.ideas"|trans }}</em>
        {% endif %}
      </span>

      <span class="col-md-4">
        <h4>{{ "community.home.last.projects"|trans }}</h4>
        {% if lastProjects|length > 0 %}
          <ul>
          {% for project in lastProjects %}
            <li><a href="{{ path('p_show_project', { uid: project.id|to_uid} ) }}">{{ project.name }}</a> - <em>{{ "community.home.created.on"|trans({ '%date%': project.createdAt|date("date.fullFormat"|trans) }) }}</em></li>
          {% endfor %}
          </ul>
        {% else %}
          <em class="muted">{{ "community.home.no.projects"|trans }}</em>
        {% endif %}
      </span>

      <span class="col-md-4">
        <h4>{{ "community.home.recentlyOnline"|trans }}</h4>
        {% if recentlyOnlineUsers|length > 1 %}
          <ul>
          {% for user in recentlyOnlineUsers if (user != app.user) %}
            <li>
              <a href="{{ path('u_show_user_profile', {'username': user.username}) }}">
                <img src="{{ user.avatar }}" title="{{ user.getFullName() }}" width="30" height="30" class="miniAvatar"/>
              </a>
            </li>
          {% endfor %}
          </ul>
        {% else %}
          <em class="muted">{{ "community.home.no.people"|trans }}</em>
        {% endif %}
      </span>

    </div>
  </section>
  {% endif %}

{% endblock %}
