{% extends 'metaUserProfileBundle::layout.html.twig' %}

{% block title %}Choose a community{% endblock %}

{% block header %}
  <div class="headerAvatarAndActions">
    <div class="textAvatar"><i class="icon-search"></i></div>
  </div>
  <div class="objectHeader">
    <h2>Choose a community</h2>
    <h4>You need to indicate a specific community to continue with your request.</h4>
  </div>
{% endblock %}


{% block content %}
<div class="formContent">
  <form action="{{ path('g_choose_community', { 'targetAsBase64' : targetAsBase64, 'token': token }) }}" method="post" class="form-horizontal" enctype="multipart/form-data">
      <div class="control-group ">
        <label class="control-label"><label for="community" class="required">Choose a community : </label></label>
        <div class="controls">
          <input type="hidden" name="name" id="name" value="community"/>
          <select id="value" name="value" required="required">
            {% for community in communities %}
            <option value="{{ community.id }}">{{ community.name }}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      <div class="form-actions">
        <a class="btn" href="javascript:history.back()">Cancel</a>
        <input type="submit" value="Choose this community" class="btn btn-success" />
      </div>
  </form>
</div>
{% endblock %}
