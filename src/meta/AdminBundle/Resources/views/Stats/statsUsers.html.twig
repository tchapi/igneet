{% extends 'metaAdminBundle::layout.html.twig' %}

{% block title %}{{ parent() }} > Statistics > Users{% endblock %}

{% block section %}Statistics > Users{% endblock %}

{% block content %}
<div class="wrapper info">
  {{ include('metaAdminBundle:Stats:_datepicker.html.twig', {'admin_route': 'a_stats_users'}) }}
</div>
<div class="wrapper stats">
  <section>

    <h4>List of new users (non deleted yet)</h4>

    {% if users|length == 0 %}
    No new users in this period
    {% else %}
    <ul>
      {% for user in users %}
      <li>{{ user.getFullName() }} (<a href="{{ path('u_show_user_profile', {'username': user.username}) }}">{{ user.username }}</a>) — <a href="mailto:{{ user.email }}">{{ user.email }}</a> — created on {{ user.createdAt|date('d-m-Y') }}</li>
      {% endfor %}
    </ul>
    {% endif %}
    
  </section>
</div>
{% endblock %}


