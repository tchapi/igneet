{% extends 'metaAdminBundle::layout.html.twig' %}

{% block title %}{{ parent() }} > Home{% endblock %}

{% block content %}
<div class="wrapper tiles">

  <section>
    <div class="tile">
      <div class="label">
        <h2><i class="fa fa-bar-chart-o"></i> Statistics</h2>
      </div>
      <div class="content">
        <p>Access all statistics regarding the use of the site</p>
      </div>
      <div class="actions">
        <a href="{{ path('a_stats_home') }}" class="button button-info">See overall statistics</a>
        <a href="{{ path('a_stats_users') }}" class="button button-success">See Users statistics</a>
      </div>
    </div>

    <div class="tile">
      <div class="label">
        <h2><i class="fa fa-bullhorn"></i> Announcements</h2>
      </div>
      <div class="content">
        <p>Prepare and manage special announcements for users</p>
      </div>
      <div class="actions">
        <a href="{{ path('a_announcements') }}" class="button button-info">Manage</a>
      </div>
    </div>

    <div class="tile">
      <div class="label">
        <h2><i class="fa fa-group"></i> Communities</h2>
      </div>
      <div class="content">
        <p>Manage communities and their validity periods</p>
      </div>
      <div class="actions">
        <a href="{{ path('a_communities') }}" class="button button-info">Manage</a>
      </div>
    </div>

</div>
{% endblock %}


