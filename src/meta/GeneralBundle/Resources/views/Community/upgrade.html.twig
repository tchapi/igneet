{% extends 'metaGeneralBundle:Community:layout.html.twig' %}

{% block title %}{{ parent() }} > {{ "community.upgrade"|trans }}{% endblock %}

{% block header %}
  <div class="title">
    <h2>{{ "community.upgrade"|trans }}</h2>
    <h3>{{ "community.upgradeHelp"|trans }}</h3>
  </div>
{% endblock %}

{% block content %}
<section>
  <div class="content-full">
    {% if manager %}
      <p>{{ "community.upgradeTextManager"|trans({"%community%" : community.name})|raw }}</p>
      <a href="{{ path('s_show_communities') }}" class="button button-success">{{ "community.upgradeButton"|trans }}</a>
    {% else %}
      <p>{{ "community.upgradeText"|trans|raw }}</p>
    {% endif %}
  </div>
</section>
{% endblock %}