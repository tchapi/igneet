{% extends 'metaIdeaBundle:Idea:show.html.twig' %}

{% block title %}{{ parent() }} | {{ "idea.content.title"|trans }}{% endblock %}

{% block content %}
<section>

  {{ "idea.content.title"|trans }}

  <textarea unsaved='no' data-name="content" data-url="{{ path('i_edit_idea', {'uid': base.idea.id|to_uid, 'token': csrf_token('edit') }) }}" class="wmd-input" id="wmd-input">{{ base.idea.content|deeplinks|raw }}</textarea>

</section>
{% endblock %}

{% block navbar %}
{% render(controller("metaIdeaBundle:Idea:navbar",{ 'activeMenu' : 'content', 'uid' : base.idea.id|to_uid })) %}
{% endblock %}